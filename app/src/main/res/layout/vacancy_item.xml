<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vacancy_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vacancy_card_placeholder"
            android:layout_width="@dimen/vacancy_item_size"
            android:layout_height="@dimen/vacancy_item_size"
            android:layout_gravity="top"
            android:src="@drawable/ic_placeholder_32px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding12"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vacancy_name_card"
                style="@style/Medium22TextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/yp_black"
                tools:text="@string/filter_parameters_location_hint" />

            <TextView
                android:id="@+id/vacancy_industry_card"
                style="@style/Regular16TextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/yp_black"
                tools:text="@string/filter_parameters_industries_hint" />

            <TextView
                android:id="@+id/vacancy_salary_card"
                style="@style/Regular16TextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/yp_black"
                tools:text="@string/filter_parameters_salary_bottom_hint" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

