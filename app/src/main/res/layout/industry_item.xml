<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/industry_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@style/Regular16TextAppearance"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/padding16"
        android:textColor="?attr/textColorPrimary"
        tools:text="Машиностроение"/>

    <RadioButton
        android:id="@+id/industry_radio_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/standard_icon_size"
        android:button="@null"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:background="@drawable/selector_radio_button"
        android:layout_marginVertical="@dimen/padding6"
        android:layout_marginHorizontal="@dimen/padding4"
        tools:checked="false"
        />
</LinearLayout>
