<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_height">56dp</item>
        <item name="backgroundTint">?backgroundPrimaryColor</item>
        <item name="itemTextAppearanceActive">@style/Regular12TextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/Regular12TextAppearance</item>
        <item name="itemIconTint">@drawable/bottom_navigation_color_selector</item>
        <item name="itemTextColor">@drawable/bottom_navigation_color_selector</item>
    </style>

    <style name="Regular12TextAppearance">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_sm</item>
    </style>

    <style name="Regular16TextAppearance">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_md</item>
    </style>

    <style name="Medium16TextAppearance">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_md</item>
    </style>

    <style name="Medium22TextAppearance">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_lg</item>
    </style>

    <style name="Bold32TextAppearance">
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/text_size_xl</item>
    </style>

    <style name="ToolbarWithoutIconStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">?attr/backgroundPrimaryColor</item>
        <item name="titleTextAppearance">@style/Medium22TextAppearance</item>
        <item name="titleTextColor">?attr/textColorPrimary</item>
    </style>

    <style name="DevelopersTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Medium16TextAppearance</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

</resources>
