<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_height">56dp</item>
        <item name="backgroundTint">?backgroundPrimaryColor</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextAppearance</item>
        <item name="itemIconTint">@drawable/bottom_navigation_color_selector</item>
        <item name="itemTextColor">@drawable/bottom_navigation_color_selector</item>
    </style>

    <style name="BottomNavigationTextAppearance">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
</resources>
